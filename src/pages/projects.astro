---
// src/pages/projects.astro
import ProjectCard from '../components/ProjectCard.astro';
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="Projects | MN">

    <main class="container">
        <header>
            <p>A collection of things I've built, from school projects to <em>late-night tinkering.</em></p>
        </header>
        <ul class="project-grid">
            {projects.map(project => (
                    <ProjectCard { ...project } />
            ))}
        </ul>
    </main>
</Layout>

<style>
    .container {
        margin-bottom: 4rem;
    }

    header p {
        font-size: 1.2rem;
        font-weight: 300;
        line-height: 1.2;
        color: var(--text-muted);
        text-align: center;
    }

</style>