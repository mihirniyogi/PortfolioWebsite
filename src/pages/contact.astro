---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact | Mihir Niyogi">
    <main class="container contact-container">
        <div class="contact-card">
            <header class="contact-header">
                <h1 class="section-title">Let's Connect</h1>
                <p class="subtitle">
                    Whether you wish to collaborate on a project or just want to say hi, 
                    my inbox is always open.
                </p>
            </header>

            <div class="contact-methods">
                <a href="mailto:mihirniyogi942@gmail.com" class="method-item">
                    <div class="icon-box">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                    </div>
                    <div class="method-text">
                        <span>Email</span>
                        <strong>mihirniyogi942@gmail.com</strong>
                    </div>
                </a>

                <a href="https://linkedin.com/in/mihir-niyogi/" target="_blank" class="method-item">
                    <div class="icon-box">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                    </div>
                    <div class="method-text">
                        <span>LinkedIn</span>
                        <strong>mihir-niyogi</strong>
                    </div>
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    .contact-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
    }

    .contact-card {
        max-width: 600px;
        width: 100%;
        text-align: center;
        padding: 2rem 2rem;
        background: color-mix(in srgb, var(--text-main), transparent 98%);
        border: 1px solid color-mix(in srgb, var(--text-main), transparent 90%);
        border-radius: 32px;
    }

    .section-title {
        font-size: var(--fs-lg);
        font-weight: 600;
        color: var(--text-main);
    }

    .subtitle {
        color: var(--text-muted);
        margin-top: 1rem;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .contact-methods {
        margin-top: 3rem;
        display: grid;
        gap: 1rem;
    }

    .method-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: var(--bg-color);
        border: 1px solid color-mix(in srgb, var(--text-main), transparent 92%);
        border-radius: 16px;
        text-decoration: none;
        transition: all 0.2s ease;
        text-align: left;
    }

    .method-item:hover {
        border-color: var(--accent);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -10px color-mix(in srgb, var(--accent), transparent 90%);
    }

    .icon-box {
        color: var(--accent);
        background: color-mix(in srgb, var(--accent), transparent 92%);
        padding: 1rem;
        border-radius: 12px;
    }

    .method-text span {
        display: block;
        font-size: 0.75rem;
        color: var(--text-muted);
        font-family: var(--font-mono);
        text-transform: uppercase;
    }

    .method-text strong {
        display: block;
        color: var(--text-main);
        font-size: 1.1rem;
    }
</style>