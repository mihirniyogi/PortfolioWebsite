---
// src/pages/experience.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mihir Niyogi">

    <main class="container">
        
        <section class="experience-section">
            <h2 class="section-title">Professional Experience</h2>
            
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-marker"/>
                    <div class="timeline-content">
                        <div class="exp-header">
                            <h3>Full Stack Web Developer</h3>
                            <span class="company">Lyza Education — Internship</span>
                            <span class="date">May 2025 - Aug 2025</span>
                        </div>
                        <ul class="exp-details">
                            <li>Maintained and optimized an in-house LMS for student progress tracking.</li>
                            <li>Designed curriculum for enrichment lessons focused on logic and syntax.</li>
                            <li>Collaborated on full-stack features to enhance teacher-student interaction.</li>
                        </ul>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker"/>
                    <div class="timeline-content">
                        <div class="exp-header">
                            <h3>STEM Curriculum Developer & Educator</h3>
                            <span class="company">Marshall Cavendish — Part-Time</span>
                            <span class="date">Mar 2023 - Jul 2023</span>
                        </div>
                        <ul class="exp-details">
                            <li>Customized STEM lesson plans for primary and secondary schools.</li>
                            <li>Instructed foundational coding principles to young learners.</li>
                            <li>Led workshops on hardware-software integration (STEM kits).</li>
                        </ul>
                    </div>
                </div>
            </div>
            
        </section>

        <section class="academic-section">
            <h2 class="section-title">Academic Leadership & Accolades</h2>

            <div class="academic-grid">
                <div class="academic-card">
                    <div class="card-header">
                        <span class="badge">Leadership</span>
                        <h3>Teaching Assistant</h3>
                        <span class="org">NUS School of Computing</span>
                    </div>
                    <p>Appointed as a TA for <strong>CS2103T (Software Engineering)</strong>. 
                        Mentored juniors in software craftsmanship, Java best practices, and agile methodologies.</p>
                    <span class="period">Aug 2024 - Dec 2024</span>
                </div>
                <div class="academic-card">
                    <div class="card-header">
                        <span class="badge">Technical</span>
                        <h3>Workshop Lead</h3>
                        <span class="org">NUS Orbital</span>
                    </div>
                    <p>Conducted a specialized <strong>Deployment Workshop</strong> for 100+ students. Covered CI/CD pipelines, Docker, and cloud hosting for web/mobile apps.</p>
                    <span class="period">Summer 2024</span>
                </div>
                <div class="academic-card accolades-card">
                    <div class="card-header">
                        <span class="badge highlight">Distinction</span>
                        <h3>Top Student Recognition</h3>
                    </div>
                    <div class="accolade-list">
                        <div class="accolade-item">
                            <span class="module">CS3219</span>
                            <p>Software Engineering Principles & Patterns - <strong>Grade: A+</strong> (Top Students Certificate)</p>
                        </div>
                        <div class="accolade-item">
                            <span class="module">CS2103T</span>
                            <p>Software Engineering - <strong>Grade: A+</strong> (Top 10 Students Certificate)</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="community-section">
            <h2 class="section-title">Community Involvement</h2>
            
            <div class="community-list">
                <div class="community-row">
                    <div class="comm-info">
                        <span class="comm-role">Weekly Volunteer</span>
                        <span class="comm-org">Lions Befrienders</span>
                        <p class="comm-desc">Conducting weekly home visits to provide companionship and social support for seniors.</p>
                    </div>
                    <span class="comm-date">Aug 2024 — July 2025</span>
                </div>
                <div class="community-row">
                    <div class="comm-info">
                    <span class="comm-role">Volunteer Educator</span>
                    <span class="comm-org">Sprout</span>
                    <p class="comm-desc">Empowering children from underprivileged backgrounds through academic support.</p>
                </div>
                <span class="comm-date">Feb 2019 - Nov 2019</span>
                </div>
            </div>

        </section>

    </main>

</Layout>

<style>
    .section-title {
        text-transform: uppercase;
        color: var(--accent);
        font-size: var(--fs-sm);
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: color-mix(in srgb, var(--text-main), transparent 90%);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 2rem;
    }

    .timeline-marker {
        position: absolute;
        left: -2.32rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--bg-color);
        border: 2px solid var(--accent);
        z-index: 1;
    }

    .exp-header {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }

    .exp-header h3 {
        font-size: var(--fs-md);
        font-weight: 600;
        color: var(--text-main);
    }

    .company {
        font-weight: 600;
        color: var(--accent);
    }

    .date {
        font-size: var(--fs-sm);
        color: var(--text-muted);
    }

    .exp-details {
        list-style-type: square;
        padding-left: 1.2rem;
        color: var(--text-muted);
    }

    .academic-section {
        margin-top: 4rem;
    }

    .academic-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .academic-card {
        background: color-mix(in srgb, var(--text-main), transparent 97%);        
        border: 1px solid color-mix(in srgb, var(--text-main), transparent 90%);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .accolades-card {
        grid-column: span 2;
        background: color-mix(in srgb, var(--accent), transparent 96%);
        border-color: color-mix(in srgb, var(--accent), transparent 80%);
    }
    
    .badge {
        font-size: var(--fs-sm);
        font-weight: 700;
        text-transform: uppercase;
        color: var(--text-muted);
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        display: block;
    }

    .badge.highlight {
        color: var(--accent);
    }

    .academic-card h3 {
        font-size: var(--fs-md);
        margin-bottom: 0.25rem;
    }

    .org {
        font-size: var(--fs-sm);
        color: var(--accent);
        font-weight: 500;
        display: block;
        margin-bottom: 1rem;
    }

    .academic-card p {
        font-size: var(--fs-sm);
        color: var(--text-muted);
        line-height: 1.5;
    }

    .period {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 1.5rem;
    }

    .accolade-list {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
    }

    .accolade-item {
        display: flex;
        align-items: center;
        gap: 0.7rem;
    }

    .academic-card p strong,
    .accolade-item p strong {
        color: var(--text-main);
        font-weight: 700;
    }

    .accolade-item strong {
        color: var(--accent) !important;
    }

    .module {
        background: var(--accent);
        color: var(--bg-color);
        font-size: var(--fs-sm);
        font-weight: 700;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        text-align: center;
    }

    @media (max-width: 768px) {
        .academic-grid {
            grid-template-columns: 1fr;
        }
        .accolades-card {
            grid-column: span 1;
        }
    }   

    .community-section {
        margin-top: 4rem;
        margin-bottom: 4rem;
    }

    .community-list {
        display: flex;
        flex-direction: column;
    }

    .community-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid color-mix(in srgb, var(--text-main), transparent 92%);
    }

    .community-row:last-child {
        border-bottom: none;
    }

    .comm-info {
        display: flex;
        flex-direction: column;
    }

    .comm-role {
        font-weight: 600;
        color: var(--text-main);
        font-size: var(--fs-base);
    }

    .comm-org {
        color: var(--accent);
        font-size: var(--fs-sm);
    }

    .comm-date {
        font-size: var(--fs-sm);
        color: var(--text-muted);
    }

    .comm-desc {
        font-size: var(--fs-sm);
        color: var(--text-muted);
        margin-top: 0.25rem;
        max-width: 50ch;
        line-height: 1.4;
    }

    @media (max-width: 600px) {
        .community-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
    }

</style>