<style>
    .footer {
        background-color: #f8f9fa;
        text-align: center;
        font-size: 0.85rem;
        color: #6c757d;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .footer-credits {
        font-family: var(--font-mono);
        margin-bottom: 0.5rem;
    }

    .copyright {
        color: var(--text-main);
        font-weight: 600;
        margin-bottom: 0.2rem;
    }

    .made-with {
        font-weight: 600;
        color: var(--text-muted);
    }

    .footer-links {
        display: flex;
        gap: 0.5rem;
    }

    .icon {
        color: var(--text-muted);
        transition: color 0.2s ease, transform 0.2s ease;
    }

    .footer-links a:hover .icon {
        color: var(--accent);
        transform: translateY(-2px);
    }

    .footer-links a {
        text-decoration: none;
        display: flex;
        align-items: center;
    }

    .version-link {
        display: inline;
        color: var(--text-muted);
        text-decoration: none;
        font-family: var(--font-mono);
        transition: color 0.2s ease;
    }

    .version-link:hover {
        color: var(--accent);
    }

    .version-link svg {
        opacity: 0.7;
    }

</style>