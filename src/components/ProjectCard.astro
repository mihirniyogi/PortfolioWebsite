---
import Image from 'astro/components/Image.astro';

// src/components/ProjectCard.astro
interface Props {
    title: string;
    description: string;
    tags: string[];
    link?: string;
    image?: string;
    inProgress?: boolean;
}

const { title, description, tags, link, image, inProgress = false } = Astro.props;
---

<li class="project-card">

    <div class="card-content">
        <h3>{title}</h3>
        <p>{description}</p>

        <div class="card-techstack">
            {tags.map(tag => (
                <span class="tag">{tag}</span>
            ))}
        </div>

        <div class="card-links">
            {link && <a href={link} target="_blank" rel="noopener noreferrer">View Code</a>}
        </div>
    </div>

    <div class="card-image">

        {inProgress && (
            <div class="status-badge">
                <span class="dot"></span>
                In Progress
            </div>
        )}

        {image ? (
            typeof image === 'string' ? 
            <img src={image} alt={title} loading="lazy" /> : 
            <Image src={image} alt={title} width={800} height={450} format="webp" />
        ) : (
            <div class="placeholder-bg">
                <div class="blueprint-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><path d="M12 11V6m0 0L9 9m3-3l3 3m-3 10v-5m0 0l-3 3m3-3l3 3M5 12h14"/></svg>
                </div>
            </div>
        )}
    </div>

</li>

<style>
    .project-card {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 4rem;
        align-items: center;
        list-style: none;

        margin-top: 2rem;
        padding: 3rem;
        border: 1px solid color-mix(in srgb, var(--text-main), transparent 75%);
        border-radius: 24px;
        box-shadow: 0 10px 30px -5px color-mix(in srgb, var(--text-main), transparent 95%);
        background-color: var(--bg-color);
        transition: all 0.3s ease;
    }

    .project-card:nth-child(even) {
        grid-template-columns: 1.2fr 1fr;
    }

    .project-card:nth-child(even) .card-image {
        order: 1;
    }

    .project-card:nth-child(even) .card-content {
        order: 2;
    }

    .card-image {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .status-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.4rem;
        background: color-mix(in srgb, var(--accent), transparent 10%);
        border-radius: 100px;
        color: white;
        font-family: var(--font-mono);
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .dot {
        width: 6px;
        height: 6px;
        background-color: #fbbf24;
        border-radius: 50%;
        box-shadow: 0 0 10px #fbbf24;
        animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;    
    }

    @keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.2; transform: scale(0.9); }
    }

    .placeholder-bg {
        width: 100%;
        height: 100%;
        min-height: 250px;
        background-color: color-mix(in srgb, var(--accent), transparent 95%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .placeholder-bg::before {
        content: "";
        position: absolute;
        inset: 0;
        opacity: 0.1;
        background-size: 20px 20px;
        background-image: 
            linear-gradient(to right, var(--text-muted) 1px, transparent 1px),
            linear-gradient(to bottom, var(--text-muted) 1px, transparent 1px);
    }

    .blueprint-icon {
        color: var(--accent);
        opacity: 0.5;
        z-index: 1;
        transition: transform 0.5s ease;
    }

    .project-card:hover .blueprint-icon {
        transform: rotate(90deg) scale(1.2);
        opacity: 0.8;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        display: block;
    }

    .project-card:hover .card-image {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.15);
        border-color: var(--accent);
        box-shadow: 0 20px 40px -10px color-mix(in srgb, var(--accent), transparent 90%);
    }

    .card-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    h3 {
        font-size: var(--fs-lg);
        color: var(--text-main);
        margin: 0;
    }

    p {
        font-size: var(--fs-base);
        color: var(--text-muted);
    }

    .card-techstack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tag {
        font-size: var(--fs-sm);
        background: color-mix(in srgb, var(--accent), transparent 80%);
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        border: 1px solid color-mix(in srgb, var(--accent), transparent 90%);
        color: var(--text-muted);
    }

    .card-links {
        margin-top: 1rem;
    }

    .card-links a {
        text-decoration: none;
        font-weight: 300;
        font-size: var(--fs-base);
        color: var(--text-muted);
        border-bottom: 1px solid var(--accent);
        padding-bottom: 2px;
        transition: opacity 0.2s ease;
    }
    
    @media (max-width: 850px) {
        .project-card, .project-card:nth-child(even) {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .project-card:nth-child(even) .card-image,
        .project-card:nth-child(even) .card-content {
            order: unset;
        }
    }

</style>